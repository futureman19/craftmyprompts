rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if the user is logged in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: Check if the user is the owner of the data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- RULES FOR THE APP DATA ---
    match /artifacts/{appId} {

      // 1. PUBLIC FEED (Posts)
      match /public/data/posts/{postId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update: if isSignedIn();
        allow delete: if false; 
      }

      // 2. USER LIBRARY (Saved Prompts)
      match /users/{userId}/saved_prompts/{document=**} {
        allow read, write: if isOwner(userId);
      }

      // 3. USER PRESETS (Custom Templates)
      match /users/{userId}/presets/{document=**} {
        allow read, write: if isOwner(userId);
      }

      // 4. USER SNIPPETS (Saved Results) -- NEW RULE
      match /users/{userId}/snippets/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}