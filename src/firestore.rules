rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if the user is logged in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: Check if the user is the owner of the data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- RULES FOR THE APP DATA ---
    // CTO FIX: Use {appId} wildcard instead of hardcoded 'craft-my-prompt-app'
    // This ensures the rules work even if the environment generates a unique App ID.
    match /artifacts/{appId} {

      // 1. PUBLIC FEED (Posts)
      // Path: /artifacts/{appId}/public/data/posts/{postId}
      match /public/data/posts/{postId} {
        // Anyone can read the feed
        allow read: if true;
        
        // Only logged-in users can create posts
        // AND the 'authorId' field must match their real User ID
        allow create: if isSignedIn() 
                      && request.resource.data.authorId == request.auth.uid;
                      
        // Only logged-in users can update (e.g., clicking 'Like')
        allow update: if isSignedIn();
        
        // No one can delete posts (for now, to be safe)
        allow delete: if false; 
      }

      // 2. USER LIBRARY (Saved Prompts)
      // Path: /artifacts/{appId}/users/{userId}/saved_prompts/{promptId}
      match /users/{userId}/saved_prompts/{document=**} {
        // You can only Read, Write, Update, or Delete if you own this folder
        allow read, write: if isOwner(userId);
      }

      // 3. USER PRESETS (Custom Templates) -- NEW
      // Path: /artifacts/{appId}/users/{userId}/presets/{presetId}
      match /users/{userId}/presets/{document=**} {
        // Users can full control their own presets
        allow read, write: if isOwner(userId);
      }
    }
  }
}